<%# LEARNING NOTE: Tickets List View %>
<%# This view shows all tickets with search/filter capabilities %>
<%# Uses Tailwind CSS for responsive design and MoodBrew coffee theme %>

<div class="min-h-screen bg-gradient-to-br from-amber-50 to-orange-100">
  <div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-amber-900 mb-2">
            ☕ MoodBrew Support Tickets
          </h1>
          <p class="text-amber-700">
            Brewing great customer experiences, one ticket at a time
          </p>
        </div>
        
        <div class="mt-4 md:mt-0 flex space-x-3">
          <!-- Analyze All Button - Always Show -->
          <% unanalyzed_count = Ticket.where(:ai_analysis.exists => false).count %>
          <% total_tickets = Ticket.count %>
          <form action="<%= analyze_all_tickets_path %>" method="post" onsubmit="return showBulkAnalyzeSpinner()" style="display: inline;">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <% if unanalyzed_count > 0 %>
              <button type="submit" id="analyze-all-button" class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 disabled:bg-purple-400 text-white font-medium rounded-lg transition-colors duration-200">
                <svg id="analyze-all-icon" class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
                <svg id="analyze-all-spinner" class="hidden w-5 h-5 mr-2 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" class="opacity-25"></circle>
                  <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" class="opacity-75"></path>
                </svg>
                <span id="analyze-all-text">🤖 Analyze All (<%= unanalyzed_count %>)</span>
              </button>
            <% else %>
              <button type="submit" id="analyze-all-button" class="inline-flex items-center px-4 py-2 bg-purple-500 hover:bg-purple-600 disabled:bg-purple-400 text-white font-medium rounded-lg transition-colors duration-200">
                <svg id="analyze-all-icon" class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <svg id="analyze-all-spinner" class="hidden w-5 h-5 mr-2 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" class="opacity-25"></circle>
                  <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" class="opacity-75"></path>
                </svg>
                <span id="analyze-all-text">🔄 Re-analyze All (<%= total_tickets %>)</span>
              </button>
            <% end %>
          </form>
          
          <!-- Background Jobs Button (Admin Only) -->
          <% if current_agent&.admin? %>
            <%= link_to "Background Jobs", admin_background_jobs_path, 
                class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" %>
          <% end %>
          
          <!-- New Ticket Button -->
          <%= link_to new_ticket_path, 
              class: "inline-flex items-center px-4 py-2 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New Ticket
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-7 gap-4 mb-8">
      <!-- Total Tickets -->
      <%= link_to tickets_path, 
          class: "block bg-white rounded-lg shadow-sm border border-amber-200 p-4 hover:shadow-md hover:bg-amber-50 transition-all duration-200 cursor-pointer group",
          title: "All support tickets in the system - Click to view all tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-amber-100 rounded-lg group-hover:bg-amber-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-amber-700">Total</p>
            <p class="text-2xl font-bold text-gray-900 group-hover:text-amber-800"><%= @stats[:total] %></p>
          </div>
        </div>
      <% end %>

      <!-- New Tickets -->
      <%= link_to tickets_path('q[status]': 'new'), 
          class: "block bg-white rounded-lg shadow-sm border border-blue-200 p-4 hover:shadow-md hover:bg-blue-50 transition-all duration-200 cursor-pointer group",
          title: "Tickets just submitted by customers that haven't been assigned yet - Click to view new tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 rounded-lg group-hover:bg-blue-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-blue-700">New</p>
            <p class="text-2xl font-bold text-blue-600 group-hover:text-blue-800"><%= @stats[:new] %></p>
          </div>
        </div>
      <% end %>

      <!-- In Progress Tickets -->
      <%= link_to tickets_path('q[status]': 'in_progress'), 
          class: "block bg-white rounded-lg shadow-sm border border-yellow-200 p-4 hover:shadow-md hover:bg-yellow-50 transition-all duration-200 cursor-pointer group",
          title: "Tickets currently being worked on by agents - Click to view in-progress tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-yellow-100 rounded-lg group-hover:bg-yellow-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-yellow-700">In Progress</p>
            <p class="text-2xl font-bold text-yellow-600 group-hover:text-yellow-800"><%= @stats[:in_progress] %></p>
          </div>
        </div>
      <% end %>

      <!-- Resolved Tickets -->
      <%= link_to tickets_path('q[status]': 'resolved'), 
          class: "block bg-white rounded-lg shadow-sm border border-green-200 p-4 hover:shadow-md hover:bg-green-50 transition-all duration-200 cursor-pointer group",
          title: "Tickets that have been successfully resolved - Click to view resolved tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-green-100 rounded-lg group-hover:bg-green-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-green-700">Resolved</p>
            <p class="text-2xl font-bold text-green-600 group-hover:text-green-800"><%= @stats[:resolved] %></p>
          </div>
        </div>
      <% end %>

      <!-- Urgent Tickets -->
      <%= link_to tickets_path('q[priority]': 'urgent'), 
          class: "block bg-white rounded-lg shadow-sm border border-red-200 p-4 hover:shadow-md hover:bg-red-50 transition-all duration-200 cursor-pointer group",
          title: "Critical tickets requiring immediate attention - Click to view urgent tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-red-100 rounded-lg group-hover:bg-red-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-red-700">Urgent</p>
            <p class="text-2xl font-bold text-red-600 group-hover:text-red-800"><%= @stats[:urgent] %></p>
          </div>
        </div>
      <% end %>

      <!-- AI Analyzed Tickets -->
      <%= link_to tickets_path('q[ai_response_status]': 'has_response'), 
          class: "block bg-white rounded-lg shadow-sm border border-purple-200 p-4 hover:shadow-md hover:bg-purple-50 transition-all duration-200 cursor-pointer group",
          title: "Tickets that have been processed by AI for insights and suggestions - Click to view AI-analyzed tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 rounded-lg group-hover:bg-purple-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-purple-700">AI Analyzed</p>
            <p class="text-2xl font-bold text-purple-600 group-hover:text-purple-800"><%= @stats[:ai_analyzed] || 0 %></p>
          </div>
        </div>
      <% end %>

      <!-- Needs Analysis Tickets -->
      <%= link_to tickets_path('q[ai_response_status]': 'no_response'), 
          class: "block bg-white rounded-lg shadow-sm border border-orange-200 p-4 hover:shadow-md hover:bg-orange-50 transition-all duration-200 cursor-pointer group",
          title: "Tickets waiting for AI analysis to provide insights and response suggestions - Click to view unanalyzed tickets" do %>
        <div class="flex items-center">
          <div class="p-2 bg-orange-100 rounded-lg group-hover:bg-orange-200 transition-colors duration-200">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 group-hover:text-orange-700">Needs Analysis</p>
            <p class="text-2xl font-bold text-orange-600 group-hover:text-orange-800"><%= @stats[:unanalyzed] || 0 %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Search and Filter Form -->
    <div class="bg-white rounded-lg shadow-sm border border-amber-200 p-6 mb-8">
      <%= form_with url: tickets_path, method: :get, class: "space-y-4", local: true do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-7 gap-4">
          <!-- Search -->
          <div class="lg:col-span-2">
            <%= form.text_field "q[search]", 
                placeholder: "Search by ticket # or subject...",
                value: @q[:search],
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" %>
          </div>

          <!-- Status Filter -->
          <div>
            <%= form.select "q[status]", 
                options_for_select([
                  ['All Statuses', 'all'],
                  ['New', 'new'],
                  ['In Progress', 'in_progress'],
                  ['Resolved', 'resolved'],
                  ['Closed', 'closed']
                ], @q[:status]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" } %>
          </div>

          <!-- Priority Filter -->
          <div>
            <%= form.select "q[priority]",
                options_for_select([
                  ['All Priorities', 'all'],
                  ['Low', 'low'],
                  ['Medium', 'medium'],
                  ['High', 'high'],
                  ['Urgent', 'urgent']
                ], @q[:priority]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" } %>
          </div>

          <!-- Category Filter -->
          <div>
            <%= form.select "q[issue_category]",
                options_for_select([
                  ['All Categories', 'all'],
                  ['Brewing', 'brewing'],
                  ['Maintenance', 'maintenance'],
                  ['Connectivity', 'connectivity'],
                  ['Mood Sensor', 'mood-sensor'],
                  ['Other', 'other']
                ], @q[:issue_category]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" } %>
          </div>

          <!-- AI Response Filter -->
          <div>
            <%= form.select "q[ai_response_status]",
                options_for_select([
                  ['All Tickets', 'all'],
                  ['Has Suggested Response', 'has_response'],
                  ['No Suggested Response', 'no_response'],
                  ['High Confidence (>85%)', 'high_confidence'],
                  ['Auto-Respondable', 'auto_respondable']
                ], @q[:ai_response_status]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" } %>
          </div>

          <!-- Agent Filter (Admin only) -->
          <% if current_agent.admin? %>
            <div>
              <%= form.select "q[assigned_agent_id]",
                  options_from_collection_for_select(@agents, :id, :display_name, @q[:assigned_agent_id]),
                  { prompt: 'All Agents' },
                  { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent" } %>
            </div>
          <% end %>
        </div>

        <div class="flex justify-between">
          <div class="flex space-x-2">
            <%= form.submit "Search", class: "px-6 py-2 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition-colors duration-200" %>
            <%= link_to "Clear", tickets_path, class: "px-6 py-2 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg transition-colors duration-200" %>
          </div>
          
          <div class="text-sm text-gray-500 flex items-center">
            Showing <%= @tickets.count %> tickets
          </div>
        </div>
      <% end %>
    </div>

    <!-- Bulk Actions Bar -->
    <div id="bulk-actions" class="hidden bg-blue-50 rounded-lg border border-blue-200 p-4 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span id="selected-count" class="text-sm font-medium text-blue-900">0 tickets selected</span>
          <div class="flex space-x-2">
            <button id="apply-responses-btn" 
                    class="px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:bg-blue-400 text-white font-medium rounded-lg transition-colors duration-200"
                    onclick="applySelectedResponses()" disabled>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              Apply Selected Responses
            </button>
          </div>
        </div>
        <button onclick="clearSelection()" class="text-sm text-gray-500 hover:text-gray-700">
          Clear Selection
        </button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-sm border border-amber-200 overflow-hidden">
      <% if @tickets.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-amber-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <input type="checkbox" id="select-all" 
                         class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded"
                         onchange="toggleAllTickets(this)">
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'subject', direction: (@sort_field == 'subject' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Ticket</span>
                    <% if @sort_field == 'subject' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'customer_name', direction: (@sort_field == 'customer_name' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Customer</span>
                    <% if @sort_field == 'customer_name' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'status', direction: (@sort_field == 'status' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Status</span>
                    <% if @sort_field == 'status' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'priority', direction: (@sort_field == 'priority' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Priority</span>
                    <% if @sort_field == 'priority' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  Assigned To
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <div class="flex items-center space-x-1">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                    <span>AI Status</span>
                  </div>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'created_at', direction: (@sort_field == 'created_at' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Created</span>
                    <% if @sort_field == 'created_at' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-amber-900 uppercase tracking-wider">
                  <%= link_to tickets_path(sort: 'updated_at', direction: (@sort_field == 'updated_at' && @sort_direction == 'asc') ? 'desc' : 'asc'), 
                      class: "flex items-center space-x-1 hover:text-amber-700 transition-colors duration-200" do %>
                    <span>Last Updated</span>
                    <% if @sort_field == 'updated_at' %>
                      <%= @sort_direction == 'asc' ? '↑' : '↓' %>
                    <% end %>
                  <% end %>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @tickets.each do |ticket| %>
                <% has_response = ticket.ai_analysis&.suggested_response.present? %>
                <% is_auto_respondable = has_response && (ticket.ai_analysis.confidence_score || 0) >= 0.85 %>
                <% ai_status = ai_analysis_status_display(ticket) %>
                <tr class="<%= ai_analysis_row_classes(ticket) %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <input type="checkbox" 
                           class="ticket-checkbox h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded"
                           data-ticket-id="<%= ticket.id %>"
                           data-has-response="<%= has_response %>"
                           data-auto-respondable="<%= is_auto_respondable %>"
                           onchange="updateBulkActions()">
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div>
                      <%= link_to ticket.ticket_number, ticket_path(ticket), 
                          class: "text-amber-600 hover:text-amber-800 font-medium" %>
                      <p class="text-sm text-gray-500 mt-1 truncate max-w-xs">
                        <%= ticket.subject %>
                      </p>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        <%= ticket.customer_info&.customer_name || 'Unknown Customer' %>
                      </p>
                      <p class="text-sm text-gray-500">
                        <%= ticket.customer_info&.email %>
                      </p>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_colors = {
                         'new' => 'bg-blue-100 text-blue-800',
                         'in_progress' => 'bg-yellow-100 text-yellow-800',
                         'resolved' => 'bg-green-100 text-green-800',
