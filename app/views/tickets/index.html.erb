<script>
function showBulkAnalyzeSpinner() {
  // Find the button by ID
  const button = document.getElementById('analyze-all-button');
  
  // Disable the button to prevent multiple clicks
  if (button) {
    button.disabled = true;
  }
  
  // Hide the original icon and show spinner
  const icon = document.getElementById('analyze-all-icon');
  const spinner = document.getElementById('analyze-all-spinner');
  const text = document.getElementById('analyze-all-text');
  
  if (icon && spinner && text) {
    icon.classList.add('hidden');
    spinner.classList.remove('hidden');
    text.textContent = '🤖 Starting analysis...';
  }
  
  // Start progress polling
  setTimeout(startProgressPolling, 1000);
  
  // Allow the form to submit
  return true;
}

function startProgressPolling() {
  const pollInterval = setInterval(function() {
    fetch('/tickets/bulk_analysis_progress')
      .then(response => response.json())
      .then(data => {
        updateProgressDisplay(data);
        
        // Stop polling when completed or failed
        if (data.status === 'completed' || data.status === 'failed' || data.status === 'not_started') {
          clearInterval(pollInterval);
        }
      })
      .catch(error => {
        console.error('Progress polling error:', error);
        clearInterval(pollInterval);
      });
  }, 2000); // Poll every 2 seconds
}

function updateProgressDisplay(progress) {
  const text = document.getElementById('analyze-all-text');
  if (!text) return;
  
  if (progress.status === 'in_progress') {
    const percentage = progress.percentage || 0;
    const current = progress.current_ticket || 'Unknown';
    const processed = progress.processed || 0;
    const total = progress.total || 0;
    const operationType = progress.operation_type || 'analysis';
    const verb = operationType === 're-analysis' ? 'Re-analyzing' : 'Analyzing';
    
    text.textContent = `🤖 ${verb}... ${percentage}% (${processed}/${total}) - ${current}`;
  } else if (progress.status === 'completed') {
    const analyzed = progress.analyzed || 0;
    const operationType = progress.operation_type || 'analysis';
    const verb = operationType === 're-analysis' ? 'Re-analysis' : 'Analysis';
    
    text.textContent = `✅ ${verb} completed! (${analyzed} tickets)`;
  } else if (progress.status === 'failed') {
    text.textContent = '❌ Analysis failed';
  }
}

// Bulk Selection Functions
function toggleAllTickets(selectAllCheckbox) {
  const checkboxes = document.querySelectorAll('.ticket-checkbox');
  checkboxes.forEach(checkbox => {
    checkbox.checked = selectAllCheckbox.checked;
  });
  updateBulkActions();
}

function updateBulkActions() {
  const checkboxes = document.querySelectorAll('.ticket-checkbox:checked');
  const bulkActions = document.getElementById('bulk-actions');
  const selectedCount = document.getElementById('selected-count');
  const applyButton = document.getElementById('apply-responses-btn');
  
  const count = checkboxes.length;
  const hasResponseCount = Array.from(checkboxes).filter(cb => cb.dataset.hasResponse === 'true').length;
  
  if (count > 0) {
    bulkActions.classList.remove('hidden');
    selectedCount.textContent = `${count} tickets selected (${hasResponseCount} with responses)`;
    applyButton.disabled = hasResponseCount === 0;
  } else {
    bulkActions.classList.add('hidden');
    selectedCount.textContent = '0 tickets selected';
    applyButton.disabled = true;
  }
}

function clearSelection() {
  const checkboxes = document.querySelectorAll('.ticket-checkbox');
  const selectAll = document.getElementById('select-all');
  
  checkboxes.forEach(checkbox => checkbox.checked = false);
  selectAll.checked = false;
  updateBulkActions();
}

function applySelectedResponses() {
  const checkboxes = document.querySelectorAll('.ticket-checkbox:checked');
  const ticketsWithResponses = Array.from(checkboxes)
    .filter(cb => cb.dataset.hasResponse === 'true')
    .map(cb => cb.dataset.ticketId);
  
  if (ticketsWithResponses.length === 0) {
    alert('No tickets with suggested responses selected.');
    return;
  }
  
  if (!confirm(`Apply suggested responses to ${ticketsWithResponses.length} selected tickets? This will send the responses to customers and update ticket status.`)) {
    return;
  }
  
  // Disable button and show loading
  const button = document.getElementById('apply-responses-btn');
  button.disabled = true;
  button.innerHTML = `
    <svg class="w-4 h-4 mr-2 inline animate-spin" fill="none" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" class="opacity-25"></circle>
      <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" class="opacity-75"></path>
    </svg>
    Applying...
  `;
  
  // Submit the bulk apply request
  const form = document.createElement('form');
  form.method = 'POST';
  form.action = '/tickets/bulk_apply_responses';
  
  // Add CSRF token
  const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content');
  if (csrfToken) {
    const csrfInput = document.createElement('input');
    csrfInput.type = 'hidden';
    csrfInput.name = 'authenticity_token';
    csrfInput.value = csrfToken;
    form.appendChild(csrfInput);
  }
  
  // Add ticket IDs
  ticketsWithResponses.forEach(ticketId => {
    const input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'ticket_ids[]';
    input.value = ticketId;
    form.appendChild(input);
  });
  
  document.body.appendChild(form);
  form.submit();
}


