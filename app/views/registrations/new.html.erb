<%# LEARNING NOTE: Registration Form View %>
<%# Creates a signup form with password confirmation %>
<%# Includes validation error display %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%# MOODBREW BRANDING: Coffee-themed header %>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-coffee-800">
        ☕ Join MoodBrew Support
      </h2>
      <p class="mt-2 text-center text-sm text-coffee-600">
        Create your account and start brewing amazing customer experiences
      </p>
    </div>
    
    <%# LEARNING NOTE: Error Display %>
    <%# Show validation errors if registration fails %>
    <% if @agent.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@agent.errors.count, "error") %> prohibited this account from being created:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @agent.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= form_with(model: @agent, url: signup_path, local: true, class: "mt-8 space-y-6") do |form| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, 
                autocomplete: "name", 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Your full name" %>
        </div>
        
        <div>
          <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, 
                autocomplete: "email", 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "you@company.com" %>
        </div>
        
        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, 
                autocomplete: "new-password", 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "At least 8 characters" %>
          <p class="mt-1 text-xs text-gray-500">Must be at least 8 characters long</p>
        </div>
        
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password_confirmation, 
                autocomplete: "new-password", 
                required: true,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: "Confirm your password" %>
        </div>
      </div>

      <div>
        <%= form.submit "Create Account ☕", 
              class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-coffee-600 hover:bg-coffee-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-coffee-500 shadow-coffee" %>
      </div>
      
      <div class="text-center">
        <p class="text-sm text-coffee-600">
          Already have an account? 
          <%= link_to "Sign in here", login_path, class: "font-medium text-coffee-500 hover:text-coffee-400" %>
        </p>
      </div>
    <% end %>
  </div>
</div>