# Sea Support Environment Configuration
# Copy this to .env and fill in your actual values

# MONGODB CONFIGURATION
# Replace with your DigitalOcean Managed MongoDB connection string or local MongoDB
# Format: mongodb://username:password@host:port/database?options
# For local: mongodb://localhost:27017/sea_support_development
# For DigitalOcean: mongodb+srv://username:password@cluster.mongodb.net/database?options
MONGODB_URI=mongodb://localhost:27017/sea_support_development

# DIGITALOCEAN AI SERVICES CONFIGURATION
# DigitalOcean Agent (specialized MoodBrew support agent with built-in RAG)
# Get these from your DigitalOcean AI platform
DO_AGENT_ENDPOINT=https://your-agent-id.agents.do-ai.run/api/v1/
DO_AGENT_ACCESS_KEY=your_agent_access_key_here

# RAILS CONFIGURATION
# Generated automatically by `rails new`, keep this secure
# Use `bin/rails credentials:edit` to manage encrypted secrets instead
RAILS_MASTER_KEY=your_rails_master_key_here

# SESSION CONFIGURATION  
# Used for encrypting cookies and sessions
# Generate with: rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# MOODBREW THEME COLORS (optional customization)
# Used in Tailwind CSS configuration for brand colors
BRAND_PRIMARY=#8B4513   # Coffee brown
BRAND_SECONDARY=#D2B48C # Tan/beige  
BRAND_ACCENT=#CD853F    # Peru/coffee

# DEPLOYMENT CONFIGURATION (production only)
# DIGITALOCEAN_ACCESS_TOKEN=your_do_token_here
# APP_DOMAIN=your-app-domain.com